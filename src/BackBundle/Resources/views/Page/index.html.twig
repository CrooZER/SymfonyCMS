{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Page list</h1>
    {% if entities  %}
    <table class="records_list table-condensed table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Alias</th>
                <th>Title</th>
                <th>Text</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Active</th>
                <th>Archive</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
    {% endif %}
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('page_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.alias }}</td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.text }}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.active }}</td>
                <td>{{ entity.archive }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('page_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('page_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
            {% else %}
                <h1>No pages</h1>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('page_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
